---
import { getCategories } from "../utils/microcms";

import Navigation from "../components/Navigation.astro";
// import Footer from "../components/Footer.astro";
import CartDrawer from "../components/CartDrawer.svelte";

import '@fontsource/red-hat-display';
import '@fontsource/noto-sans-jp';

export interface Props {
  title: string;
  description?: string;
  currentPage?: string
}

const defaultDesc ="SomeRoomはさまざまな領域で活動するデザイナーが制作を行う作業部屋です。制作物の販売などのイベントにグループで参加しています。";

const categories = await getCategories({
  limit: 100
});

const { title, description = defaultDesc, currentPage } = Astro.props as Props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={new URL('/ogp.png', Astro.url).href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/ogp.png', Astro.url).href} />

    <style is:global>
      @import "../styles/global.css";
    </style>
    <slot name="head" />
  </head>
  <body>
    <CartDrawer client:idle />
    <div class="min-h-screen px-12 grid grid-cols-13 items-start gap-x-12 max-md:gap-x-6 max-sm:gap-x-4 max-lg:px-8 max-sm:px-6 max-xs:px-4">
      <Navigation className="sticky top-0 col-span-3 max-sm:fixed max-sm:left-0 max-sm:w-full max-sm:px-6 max-xs:px-4" currentPage={currentPage} categories={categories.contents} />
      <main class="col-start-4 col-span-10 pb-12 max-sm:col-start-1 max-sm:col-span-13">
        <slot />
      </main>
    </div>
    <footer class="px-12 py-8 border-t border-gray-200 max-lg:px-8 max-sm:px-6 max-xs:px-4">
      <div class="flex gap-x-6 text-xs text-gray-500">
        <a href="/legal/tokusho" class="hover:text-black transition-colors">特定商取引法に基づく表記</a>
        <a href="/legal/privacy" class="hover:text-black transition-colors">プライバシーポリシー</a>
      </div>
    </footer>
  </body>
</html>
