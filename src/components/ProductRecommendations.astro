---
import { getProducts } from "../utils/microcms";
import ProductCardByMicrocms from "./ProductCardByMicrocms.astro";

export interface Props {
  productId: string;
  categoryIds?: string[];
}

const { productId, categoryIds = [] } = Astro.props as Props;

// Fetch related products by category
const products = categoryIds.length > 0
  ? await getProducts({
      filters: `id[not_equals]${productId}[and]categories[contains]${categoryIds[0]}`,
      limit: 4,
    })
  : { contents: [] };
---

{
  products.contents.length > 0 && (
    <section class="bg-white">
      <div class="py-16 sm:py-24">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900">
          Customers also purchased
        </h2>

        <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
          {products.contents.map((product) => (
            <ProductCardByMicrocms product={product} />
          ))}
        </div>
      </div>
    </section>
  )
}
